{
  "private": true,
  "scripts": {
    "prepare": "git config core.hooksPath .githooks && chmod +x .githooks/*",
    "install:web-app": "cd server/web-app && npm install",
    "install:client": "cd client && npm install",
    "install:recommender": "cd server/recommender-api && ",
    "install:all": "npm run install:web-app && npm run install:client && npm run install:recommender",
    "start:dev:web-app": "cd server/web-app && npm run start:dev",
    "start:dev:client": "cd client && npm run dev",
    "start:dev:recommender": "cd server/recommender-api && ",
    "docker:web-app:start": "docker-compose -f server/web-app/docker-compose.yml up --build",
    "start:dev:all": "concurrently \"npm run start:web-app\" \"npm run start:client\" \"npm run start:recommender\" \"docker:web-app:start\""
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
