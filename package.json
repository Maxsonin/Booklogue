{
  "private": true,
  "scripts": {
    "prepare": "git config core.hooksPath .githooks",
    "install:web-app": "cd server/web-app && npm install",
    "install:client": "cd client && npm install",
    "install:recommender": "cd server/recommender-api && ",
    "install:all": "npm run install:web-app && npm run install:client && npm run install:recommender",
    "start:dev:web-app": "cd server/web-app && npm run start:dev",
    "start:dev:client": "cd client && npm run dev",
    "start:dev:recommender": "cd server/recommender-api && ",
    "docker:web-app:start": "docker-compose -f server/web-app/docker-compose.yml up --build -d",
    "docker:web-app:stop": "docker-compose -f server/web-app/docker-compose.yml down",
    "start:dev:all": "npm run docker:web-app:start && wait-port localhost:5433 && concurrently \"npm run start:dev:web-app\" \"npm run start:dev:client\" \"npm run start:dev:recommender\"",
    "prisma:studio": "cd server/web-app && npx prisma studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "wait-port": "^1.1.0"
  }
}
